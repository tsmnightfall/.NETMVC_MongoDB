@model IEnumerable<DemoMongoDB.Models.DataModels.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>DANH MỤC SẢN PHẨM</h1>
<form action="" method="get">
    Nhập tên cần tìm <input type="text" name="name" />
    <button>Tìm</button>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item._id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrandId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.Picture" width="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item._id  }) |
                    @Html.ActionLink("Details", "Details", new {  id=item._id  }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item._id  })
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    Trang:
    @for (var r = 1; r <= ViewBag.totalpage; r++)
    {
        if (r == (int)ViewBag.page)
        {
            <span>@r</span>
        }
        else if(ViewBag.name!=null)
        {
            <a href="?page=@r&name=@ViewBag.name">@r</a>
        }
        else
        {
            <a href="?page=@r">@r</a>
        }
    }
</p>